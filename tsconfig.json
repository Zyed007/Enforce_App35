{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "types": ["react", "react-native"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
